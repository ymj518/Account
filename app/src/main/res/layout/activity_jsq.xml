            android:background="@drawable/button_border"
            android:drawableTop="@drawable/zhufang"
            android:text="住房"
            android:textColor="#AAA" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_border"
            android:drawableTop="@drawable/shuji"
            android:text="书籍"
            android:textColor="#AAA" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_border"
            android:drawableTop="@drawable/jiaotong"
            android:text="交通"
            android:textColor="#AAA" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_border"
            android:drawableTop="@drawable/caipiao"
            android:text="彩票"
            android:textColor="#AAA" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_border"
            android:drawableTop="@drawable/tongxun"
            android:text="通讯"
            android:textColor="#AAA" />

    </GridLayout>
    <GridLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_border"
            android:drawableTop="@drawable/muyin"
            android:text="母婴"
            android:textColor="#AAA" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_border"
            android:drawableTop="@drawable/yifu"
            android:text="服饰"
            android:textColor="#AAA" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_border"
            android:drawableTop="@drawable/riyong"
            android:text="日用"
            android:textColor="#AAA" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_border"
            android:drawableTop="@drawable/yiliao"
            android:text="医疗"
            android:textColor="#AAA" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_border"
            android:drawableTop="@drawable/lvxing"
            android:text="旅行"
            android:textColor="#AAA" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_border"
            android:drawableTop="@drawable/guoshu"
            android:text="果蔬"
            android:textColor="#AAA" />

    </GridLayout>
    <GridLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_border"
            android:drawableTop="@drawable/meirong"
            android:text="美容"
            android:textColor="#AAA" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_border"
            android:drawableTop="@drawable/qiche"
            android:text="汽车"
            android:textColor="#AAA" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_border"
            android:drawableTop="@drawable/shuma"
            android:text="数码"
            android:textColor="#AAA" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_border"
            android:drawableTop="@drawable/linshi"
