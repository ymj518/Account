<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context=".tabbar.setting.ActivitySet3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/arrow"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:text="数据管理"
            android:textSize="24sp"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:background="@drawable/button_border"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="定时自动备份"
                android:textSize="16dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每隔24个小时一次"
                android:textSize="12dp" />
        </LinearLayout>
        <Switch
            android:id="@+id/switch1"
            android:onClick="swtichClick"
            android:layout_marginTop="10dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:checked="false" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="您的所有数据都是与您的第三方账户绑定的，备份之前请确认您已经正确绑定了第三方账户"
        android:textSize="14dp" />

    <Button
        android:id="@+id/btn_tj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/set3_border"
        android:layout_margin="40dp"
        android:text="+ 添加一个数据备份数据到云端"
        android:textColor="#000000"/>
    <Button
        android:id="@+id/btn_hf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/set3_border"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="恢复云端数据到此设备"
        android:textColor="#000000"/>
    <Button
        android:id="@+id/btn_dc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/set3_border3"
        android:layout_margin="40dp"
        android:text="导出CSV格式"
        android:textColor="#000000"/>




</LinearLayout>