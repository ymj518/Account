            android:textColor="#AAA" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_border"
            android:drawableTop="@drawable/canyin"
            android:text="餐饮"
            android:textColor="#AAA" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_border"
            android:drawableTop="@drawable/yanjiu"
            android:text="烟酒"
            android:textColor="#AAA" />

    </GridLayout>
<LinearLayout
    android:id="@+id/ll_content"
    android:layout_marginTop="00dp"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:gravity="center"
    android:background="@drawable/textview_border"
    android:orientation="vertical">
    <EditText
        android:id="@+id/etInput"
        android:layout_width="310dp"
        android:layout_height="30dip"
    android:gravity="right"
    android:layout_gravity="center"
    android:background="@drawable/button_border"/> <!-- 设置输入框的背景，为一个xml文件 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >  <!-- 代表水平排布 -->

        <Button
            android:id="@+id/btClear"
            android:background="@drawable/button_border"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:text="C" />
        <Button
            android:id="@+id/btDel"
            android:background="@drawable/button_border"
            android:layout_marginLeft="5dp"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="DEL" />
        <Button
            android:id="@+id/btDivide"
            android:background="@drawable/button_border"
            android:layout_marginLeft="5dp"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="/" />
        <Button
            android:id="@+id/btMul"
            android:background="@drawable/button_border"
            android:layout_marginLeft="5dp"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="*" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btSeven"
            android:background="@drawable/button_border"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="7" />
        <Button
            android:id="@+id/btEight"
            android:background="@drawable/button_border"
            android:layout_marginLeft="5dp"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="8" />
        <Button
            android:id="@+id/btNine"
            android:background="@drawable/button_border"
            android:layout_marginLeft="5dp"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="9" />
        <Button
            android:id="@+id/btJian"
            android:background="@drawable/button_border"
            android:layout_marginLeft="5dp"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btFour"
            android:background="@drawable/button_border"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="4" />
        <Button
            android:id="@+id/btFive"
            android:background="@drawable/button_border"
            android:layout_marginLeft="5dp"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="5" />
        <Button
            android:id="@+id/btSix"
            android:background="@drawable/button_border"
            android:layout_marginLeft="5dp"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="6" />
        <Button
            android:id="@+id/btJia"
            android:background="@drawable/button_border"
            android:layout_marginLeft="5dp"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <Button
                    android:id="@+id/btOne"
                    android:background="@drawable/button_border"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:textSize="20sp"
                    android:text="1" />
                <Button
                    android:id="@+id/btTwo"
                    android:background="@drawable/button_border"
                    android:layout_marginLeft="5dp"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:textSize="20sp"
                    android:text="2" />
                <Button
                    android:id="@+id/btThree"
                    android:background="@drawable/button_border"
                    android:layout_marginLeft="5dp"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:textSize="20sp"
                    android:text="3" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >
                <Button
                    android:id="@+id/btZero"
                    android:background="@drawable/button_border"
                    android:layout_width="155dp"
                    android:layout_height="30dp"
                    android:textSize="20sp"
                    android:text="0" />
                <Button
                    android:id="@+id/btPoint"
                    android:background="@drawable/button_border"
                    android:layout_marginLeft="5dp"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:textSize="20sp"
                    android:text="." />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_width="75dp"
            android:background="@drawable/button_border"
            android:layout_height="65dp"
            android:text="="
            android:layout_marginLeft="5dp"
            android:textSize="20sp"
            android:gravity="center"
            android:id="@+id/btEqu">
        </Button>

    </LinearLayout>
</LinearLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#F2F2F2"
        android:id="@+id/btn_group"
        android:orientation="horizontal">
        <RadioButton
            style="@style/TabMenuItem"
            android:drawableTop="@drawable/today"
            android:id="@+id/btn_course"
            android:text="TODAT"
            android:textColor="#AAA"/>
        <RadioButton
            style="@style/TabMenuItem"
            android:drawableTop="@drawable/tongji"
            android:id="@+id/btn_execise"
            android:text="统计"
            android:textColor="#aaa"/>
        <RadioButton
            style="@style/TabMenuItem"
            android:drawableTop="@drawable/zichan"
            android:id="@+id/btn_message"
            android:text="资产"
            android:textColor="#aaa"/>
        <RadioButton
            style="@style/TabMenuItem"
            android:drawableTop="@drawable/wode"
            android:id="@+id/btn_my"
            android:text="我的"
            android:textColor="#aaa"/>
    </RadioGroup>
</LinearLayout>